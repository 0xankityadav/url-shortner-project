<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>URL Shortner</title>
</head>

<body>
    <div class="container">
        <h1 class="display-1 text-center">URL Shortner</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <div class="input-group mb-3 w-75 mx-auto">
                <input required type="url" class="form-control" placeholder="Paste the URL here" name="originalUrl" id="originalUrl">
                <div class="input-group-append">
                    <button class="btn btn-primary px-5 py-3" type="submit">Go</button>
                </div>
            </div>
        </form>

        <table class="table table-striped table-responsive w-75 mx-auto">
            <thead>
                <tr>
                    <th>Original URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl=> { %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>" target="_blank" class="text-decoration-none"><%= shortUrl.full %></a></td>
                        <td><a href="<%= shortUrl.short %>" target="_blank" class="text-decoration-none">https://shrt.io/<%= shortUrl.short %></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <footer>

    </footer>
</body>

</html>